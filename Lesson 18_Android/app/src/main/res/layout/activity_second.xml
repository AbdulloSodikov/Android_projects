<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

 <TextView
        android:id="@+id/textSecondCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_counter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        />
<TextView
    android:id="@+id/intSecondCounter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/int_second_counter"
    android:layout_below="@+id/textSecondCounter"
    android:layout_centerInParent="true"
    android:layout_marginTop="100dp"
    android:textSize="100sp"
    android:textColor="@color/black"/>

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:text="@string/reset"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="-"
        android:textSize="50sp" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/buttonMinus"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="+"
        android:textSize="50sp" />


</RelativeLayout>