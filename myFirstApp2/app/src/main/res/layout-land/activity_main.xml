<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="137dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="6dp"
        android:textSize="10dp"
        android:text="Далее..." />

    <ImageView
        android:id="@+id/imageMisha"
        android:layout_width="209dp"
        android:layout_height="220dp"
        app:srcCompat="@mipmap/ic_misha_foreground" />

    <ImageView
        android:id="@+id/imageMasha"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_alignBottom="@+id/imageMisha"
                android:layout_toEndOf="@+id/imageMisha"
        app:srcCompat="@mipmap/ic_masha_foreground" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Маша и медведь"
        android:layout_below="@+id/imageMisha"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/testHistory"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/textHistory"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:lineSpacingMultiplier="1.3"
        android:layout_below="@+id/title"/>

</RelativeLayout>