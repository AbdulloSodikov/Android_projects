<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context=".MainActivity"
    android:orientation="horizontal">


    <Button
        android:id="@+id/button"
        android:layout_width="137dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="6dp"
        android:textSize="10dp"
        android:text="Далее..." />

    <ImageView
        android:id="@+id/imageMisha"
        android:layout_width="209dp"
        android:layout_height="220dp"
        app:srcCompat="@mipmap/ic_misha_foreground" />

    <ImageView
        android:id="@+id/imageMasha"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_alignBottom="@+id/imageMisha"
                android:layout_toEndOf="@+id/imageMisha"
        app:srcCompat="@mipmap/ic_masha_foreground" />

    <TextView
        android:id="@+id/title"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageMasha"

        android:text="Маша и медведь"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/testHistory"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/imageMasha"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/textHistory1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/testHistory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textHistory2"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/imageMasha"/>


</RelativeLayout>